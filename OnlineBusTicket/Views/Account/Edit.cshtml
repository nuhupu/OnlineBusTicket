@model OnlineBusTicket.Models.Account

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Exportable Table -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h1 style="color: red; font-weight:bold">
                    EDIT ACCOUNT
                </h1>
            </div>
