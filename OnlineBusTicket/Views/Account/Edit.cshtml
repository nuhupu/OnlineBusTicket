                            @Html.HiddenFor(model => model.aUsername)
                            @Html.HiddenFor(model => model.aPassword)



                            <div class="form-group">
                                @Html.LabelFor(model => model.aName, htmlAttributes: new { @class = "control-label col-md-2" })
