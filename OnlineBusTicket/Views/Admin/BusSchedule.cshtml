@model IEnumerable<OnlineBusTicket.Models.View.BusScheduleView>
@{
    ViewBag.Title = "BusSchedule";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Exportable Table -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Bus Schedule Management
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="@Url.Action("AddBusSchedule", "Admin")" role="button" aria-haspopup="true" aria-expanded="false">
                            Add new schedule
                        </a>

                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>

                                <th>Bus number</th>
                                <th>Start Time</th>
                                <th>Start Place</th>
                                <th>Destination</th>

                                <th>Price</th>
                                @*<th>Edit</th>*@
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Bus number</th>
                                <th>Start Time</th>
                                <th>Start Place</th>
                                <th>Destination</th>

                                <th>Price</th>
                                @*<th>Edit</th>*@

                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.bus.bNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.block.StartTime)</td>
                                    @{
                                        foreach (var a in ViewBag.CounterName)
                                        {
                                            if (Convert.ToInt32(a.Value) == item.block.StartPlace)
                                            {
                                                <td>@a.Text</td>
                                            }
                                        }
                                        foreach (var a in ViewBag.CounterName)
                                        {
                                            if (Convert.ToInt32(a.Value) == item.block.Destination)
                                            {
                                                <td>@a.Text</td>
                                            }
                                        }
                                    }
                                    <td>@Html.DisplayFor(modelItem => item.block.btPrice)</td>

                                    @*<td><a href="@Url.Action("EditBusSchedule", "Admin", new { id = item.busSchedule.gbtId})"><i class="material-icons">mode_edit</i></a></td>*@
                                </tr>
                            }
                            @*<tr>
            <td>00001</td>
            <td>Sai Gon</td>
            <td>Vung Tau</td>
            <td>6:00</td>
            <td>$10</td>
            <td><i class="material-icons">mode_edit</i></td>
        </tr>
                            *@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #END# Exportable Table -->
