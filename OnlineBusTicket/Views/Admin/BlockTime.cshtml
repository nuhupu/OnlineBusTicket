@model IEnumerable<OnlineBusTicket.Models.BlockTime>
@{
    ViewBag.Title = "BlockTime";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!-- Exportable Table -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Block Time Management
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="@Url.Action("AddBlockTime", "Admin")"  role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">add_box</i>
                        </a>
                        
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>Start Place</th>
                                <th>Destination</th>
                                <th>Start Time</th>
                                <th>Price</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Start Place</th>
                                <th>Destination</th>
                                <th>Start Time</th>
                                <th>Price</th>
                                <th>Edit</th>

                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                                @{
                                    foreach (var a in ViewBag.CounterName)
                                    {
                                        if (Convert.ToInt32(a.Value) == item.StartPlace)
                                        {
                                            <td>@a.Text</td>
                                        }
                                    }
                                    foreach (var a in ViewBag.CounterName)
                                    {
                                        if (Convert.ToInt32(a.Value) == item.Destination)
                                        {
                                            <td>@a.Text</td>
                                        }
                                    }
                                }
                                @*<td>@Html.DisplayFor(modelItem => item.StartPlace)</td>
        <td>@Html.DisplayFor(modelItem => item.Destination)</td>*@

                                <td>@Html.DisplayFor(modelItem => item.btPrice)</td>

                                <td><a href="@Url.Action("Edit", "Admin", new { id = item.btId })"><i class="material-icons">mode_edit</i></a></td>
                            </tr>
}


                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #END# Exportable Table -->