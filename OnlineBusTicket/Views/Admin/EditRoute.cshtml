
@{
    ViewBag.Title = "EditRoute";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">  
            <div class="body">
                <h2>Edit Route</h2>
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                        <b>Bus Type</b>
                        <div class="form-group form-group-lg">
                            <div class="form-line">
                                <input type="text" class="form-control" value="Volvo" />
                            </div>
                        </div>

                        <b>Departure Time</b>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">access_time</i>
                            </span>
                            <div class="form-line">
                                <input type="text" class="form-control time24" value="7:30">
                            </div>
                        </div>

                        <b>Pick off</b>
                        <div class="form-group form-group-lg">
                            <div class="form-line">
                                <input type="text" class="form-control" value="Sai Gon" disabled />
                            </div>
                        </div>

                        <b>Pick off</b>
                        <div class="form-group form-group-lg">
                            <div class="form-line">
                                <input type="text" class="form-control" value="Vung Tau" disabled />
                            </div>
                        </div>

                        <b>Price</b>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">attach_money</i>
                            </span>
                            <div class="form-line">
                                <input type="text" class="form-control money-dollar" value="10">
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary m-t-15 waves-effect">Save Changes</button>
                 </div>   
                </div>
            </div>
        </div>
    </div>
</div>